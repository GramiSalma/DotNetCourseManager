@model Models.Authentification.AdminVM


<html>
<head>

    <style>


        form {
            width: 500px; /* Largeur augmentée */
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            box-sizing: border-box; /* Pour inclure le padding dans la largeur totale */
        }

        label {
            display: block;
            margin-bottom: 8px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

            input[type="submit"] {
                background-color: #4CAF50;
                color: white;
                cursor: pointer;
            }

                input[type="submit"]:hover {
                    background-color: #45a049;
                }
    </style>
</head>
<body>

    <form asp-controller="Admin" asp-action="Create" method="post">
        <h1>@ViewData["Titre"]</h1>
      Nom : <input asp-for="@Model.Nom" />
        <br />
        Prenom: <input asp-for="@Model.Prenom" />
        <br />
        Compte : <input type="text" placeholder="name@@example.com" asp-for="@Model.Compte" />
        <br />
        Mot de passe  :<input type="password" asp-for="@Model.MotPasse" />
        
        <input type="submit" value="Ajouter" />
    </form>
</body>
</html>
